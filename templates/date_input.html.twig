{% if readonly %}
    {% if prefilled_data[name] is defined %}
        <span class="readonly-label">{{ label }}: </span><span class="readonly-input">{{ prefilled_data[name] }}</span>
    {% endif %}
{% else %}
    <label for="{{ name }}">{{ label }}</label>
    <input name="{{ name }}" type="date"{% if prefilled_data[name] is defined %} value="{{ prefilled_data[name] }}"{% endif %}/>
{% endif %}
