<input id="{{ name }}_checkbox_custom" name="{{ name }}_checkbox" type="checkbox" value="{% if prefilled_data[name] is defined and prefilled_data[name] is not empty %}checked{% endif %}"/>{% if label is defined %}{{ label }} {% endif %}
<input type="text" oninput="document.getElementById('{{ name }}_checkbox_custom').checked = this.value != '';" name="{{ name }}"/>
