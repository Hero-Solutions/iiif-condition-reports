{% if not readonly or prefilled_data[name] is defined %}
    {{ label }}{% if no_newline is not defined %}<br/>{% endif %}<textarea cols="{{ cols | default(100) }}" oninput="fix{{ name }}textareaheight()" name="{{ name }}" id="textarea_{{ name }}" {% if readonly %}style="resize: none; background: none; color: black;" disabled{% endif %}>{% if prefilled_data[name] is defined %}{{ prefilled_data[name] }}{% endif %}</textarea>
    <script>
        function fix{{ name }}textareaheight() {
            var ele = document.getElementById('textarea_{{ name }}');
            ele.style.height = "16px";
            ele.style.height = ele.scrollHeight + "px";
        }
        document.addEventListener("DOMContentLoaded", fix{{ name }}textareaheight);
        if(typeof eventsToTrigger === 'undefined') {
            var eventsToTrigger = [];
        }
        eventsToTrigger.push('fix{{ name }}textareaheight');
    </script>
{% endif %}
