{{ label }}<br/><textarea cols="100" oninput="fix{{ name }}textareaheight()" name="{{ name }}" id="textarea_{{ name }}">{% if prefilled_data[name] is defined %}{{ prefilled_data[name] }}{% endif %}</textarea>
<script>
    function fix{{ name }}textareaheight() {
        var ele = document.getElementById('textarea_{{ name }}');
        ele.style.height = "16px";
        ele.style.height = ele.scrollHeight + "px";
    }
    document.addEventListener("DOMContentLoaded", fix{{ name }}textareaheight);
</script>
