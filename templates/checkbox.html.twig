{% if readonly %}
    {% if prefilled_data[name] is defined and prefilled_data[name] is not empty %}
        <input type="checkbox" name="{{ name }}" checked disabled/> <label for="{{ name }}">{{ label }}</label>
    {% endif %}
{% else %}
    <input type="checkbox"
        name="{{ name }}"
        id="{{ name }}"
        autocomplete="off"
        {% if onclick is defined and onclick is not empty %} onclick="{{ onclick }}"{% endif %}
        {% if prefilled_data[name] is defined and prefilled_data[name] is not empty %} checked{% endif %}
        {% if disabled is defined and disabled %} disabled{% endif %}
    />
    <label for="{{ name }}">{{ label }}</label>
{% endif %}
