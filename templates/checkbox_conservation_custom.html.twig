{% if label is defined %}{{ label }}{% endif %} <input type="text" name="{{ name }}_custom_text" oninput="document.getElementById('{{ name }}_checkbox_right_text').checked = this.value != '';" value="{% if prefilled_data[name ~ 'custom_text'] is defined and prefilled_data[name ~ 'custom_text'] is not empty %}{{ prefilled_data[name ~ 'custom_text'] }}{% endif %}"/>
<input id="{{ name }}_checkbox_right_text" name="{{ name }}_checkbox" type="checkbox" value="{% if prefilled_data[name] is defined and prefilled_data[name] is not empty %}checked{% endif %}"/>
<input type="number" name="{{ name }}" value="{% if prefilled_data[name] is defined and prefilled_data[name] is not empty %}{{ prefilled_data[name] }}{% endif %}"/>
<input type="text" name="{{ name }}_text" value="{% if prefilled_data[name ~ '_text'] is defined and prefilled_data[name ~ '_text'] is not empty %}{{ prefilled_data[name ~ '_text'] }}{% endif %}"/>
