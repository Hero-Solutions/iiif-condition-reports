{% include 'header.html.twig' %}
{% if search_results is empty %}
    <p>Geen rapporten gevonden.</p>
{% else %}
    <div class="reports">
        <div class="reports-header">
            <div class="table-cell">Thumbnail</div>
            <div class="table-cell">Inventarisnummer</div>
            <div class="table-cell">Titel</div>
            <div class="table-cell">Vervaardiger</div>
            <div class="table-cell">Laatste wijziging</div>
        </div>
        {% for result in search_results %}
            <a class="reports-row" href="{% if action == 'create' %}{{ path('create_existing', { id : result.id }) }}{% else %}{{ path('view', { id : result.id }) }}{% endif %}">
                <div class="table-cell"><img src="{{  result.thumbnail }}" alt="" /></div>
                <div class="table-cell">{{  result.inventory_number }}</div>
                <div class="table-cell">{{  result.title_nl }}</div>
                <div class="table-cell">{{  result.creator }}</div>
                <div class="table-cell">{{  result.timestamp }}</div>
            </a>
        {% endfor %}
    </div>
{% endif %}
{% include 'footer.html.twig' %}
