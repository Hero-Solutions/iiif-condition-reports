{% include 'header.html.twig' %}
<h1>Beheer vertegenwoordigers</h1>
<div class="reports">
    <div class="reports-header">
        <div class="table-cell">Alias</div>
        <div class="table-cell">Naam</div>
        <div class="table-cell">Functie</div>
        <div class="table-cell">E-mail</div>
        <div class="table-cell">Tel.</div>
        <div class="table-cell">Wijzig</div>
        <div class="table-cell">Verwijder</div>
    </div>
    {% for representative in representatives %}
        <div class="reports-row">
            <div class="table-cell">{{  representative.alias }}</div>
            <div class="table-cell">{{  representative.name }}</div>
            <div class="table-cell">{{  representative.function }}</div>
            <div class="table-cell">{{  representative.email }}</div>
            <div class="table-cell">{{  representative.phone }}</div>
            <a class="table-cell" href="{{ path('representative', { id: representative.id }) }}">Wijzig</a>
            <a class="table-cell" href="{{ path('representative', { id: representative.id, action: 'delete' }) }}">Verwijder</a>
        </div>
    {% endfor %}
</div>
<a href="{{ path('representative', { type : 'new' }) }}">Een nieuwe persoon toevoegen</a>
