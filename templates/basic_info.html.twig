{% if not readonly or prefilled_data.inventory_number is defined or prefilled_data.current_location is defined or prefilled_data.object_name is defined or prefilled_data.dimensions is defined or prefilled_data.weight is defined or prefilled_data.creator_nl is defined or prefilled_data.title_nl is defined or prefilled_data.creation_date is defined or prefilled_data.copyright is defined %}
<div id="basic-info-form"{% if not readonly %} class="form-tab"{% endif %}>
    <div class="report-header">{{ 'Object identification' | trans }}</div>
    <div class="form-group">
        <div class="form-subgroup">
            <div class="form-item">
                {% include 'textfield.html.twig' with { 'name': 'inventory_number', 'label': 'Inventory number' | trans } %}
            </div>
            <div class="form-item">
                {% include 'textfield.html.twig' with { 'name': 'current_location', 'label': 'Location' | trans } %}
            </div>
            <div class="form-item">
                {% include 'textfield.html.twig' with { 'name': 'object_name', 'label': 'Object name' | trans } %}
            </div>
        </div>
        <div class="form-subgroup">
            <div class="form-item">
                {% include 'textfield.html.twig' with { 'name': 'dimensions', 'label': 'Measurements' | trans } %}
            </div>
            <div class="form-item">
                {% include 'textfield.html.twig' with { 'name': 'weight', 'label': 'Weight' | trans } %}
            </div>
        </div>
        <div class="form-subgroup">
            <div class="form-item form-creator">
                {% include 'textarea.html.twig' with { 'name': 'creator_nl', 'label': 'Creator' | trans } %}
            </div>
        </div>
        <div class="form-subgroup">
            <div class="form-item">
                {% if app.request.locale == 'en' and prefilled_data.title_en is defined and prefilled_data.title_en is not empty %}
                    {% include 'textfield.html.twig' with { 'name': 'title_en', 'label': 'Title' | trans } %}
                    {% if not readonly and prefilled_data.title_nl is defined %}
                        <input type="hidden" name="title_nl" value="{{ prefilled_data.title_nl }}">
                   {% endif %}
                {% else %}
                    {% include 'textfield.html.twig' with { 'name': 'title_nl', 'label': 'Title' | trans } %}
                    {% if not readonly and prefilled_data.title_en is defined %}
                        <input type="hidden" name="title_en" value="{{ prefilled_data.title_en }}">
                    {% endif %}
                {% endif %}
            </div>
        </div>
        <div class="form-subgroup">
            <div class="form-item">
                {% include 'textfield.html.twig' with { 'name': 'creation_date', 'label': 'Dating' | trans } %}
            </div>
            <div class="form-item">
                {% include 'textfield.html.twig' with { 'name': 'copyright', 'label': 'Copyright' | trans } %}
            </div>
        </div>
    </div>
    {% if not readonly %}
    <div class="buttons">
        <div class="previous-button">
            <button type="button" onclick="showDiv('reason-form')">{{ 'Previous' | trans }}</button>
        </div>
        <div class="next-button">
            <button type="button" onclick="showDiv('actors-form')">{{ 'Next' | trans }}</button>
        </div>
    </div>
    {% endif %}
</div>
{% endif %}
