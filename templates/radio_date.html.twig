{% if onclick is defined %}
    {% include 'radio.html.twig' with { 'name': name, 'label': label, 'value': value, 'onclick': onclick } %}
{% else %}
    {% include 'radio.html.twig' with { 'name': name, 'label': label, 'value': value } %}
{% endif %}

{% if readonly %}
    {% if prefilled_data[name ~ '_radio_date'] is defined and prefilled_data[name ~ '_radio_date'] is not empty %}
        <span class="readonly-input">{{ prefilled_data[name ~ '_radio_date'] }}</span>
    {% endif %}
{% else %}
    <input name="{{ name ~ '_radio_date' }}" type="date" class="radio-date" value="{% if prefilled_data[name ~ '_radio_date'] is defined %}{{ prefilled_data[name ~ '_radio_date'] }}{% endif %}"/>
{% endif %}
